{
  "name": "opencode-swarm-monorepo",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish --access public || true); done && changeset tag",
    "test:integration": "bun --filter=opencode-swarm-plugin test:integration",
    "eval:ci": "cd packages/opencode-swarm-plugin && bun run swarm eval run --ci"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.1"
  },
  "overrides": {
    "@types/node": "22.19.3"
  }
}
