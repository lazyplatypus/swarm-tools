{
  "name": "swarm-queue",
  "version": "0.1.0",
  "description": "Distributed job queue for swarm multi-agent coordination using BullMQ and Redis",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelhooks/opencode-swarm-plugin"
  },
  "author": "Joel Hooks",
  "license": "MIT",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external bullmq --external ioredis && tsc",
    "test": "bun test --timeout 60000 $(find src -name '*.test.ts' ! -name '*.integration.test.ts' | tr '\\n' ' ')",
    "test:integration": "bun test src/*.integration.test.ts src/**/*.integration.test.ts --timeout 120000",
    "test:all": "bun test src/ --timeout 120000",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bullmq": "^5.34.6",
    "ioredis": "^5.4.2",
    "nanoid": "^5.1.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "bun-types": "^1.3.4",
    "typescript": "^5.7.2"
  }
}
