{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "env": ["AI_GATEWAY_API_KEY", "OLLAMA_HOST"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "publish:pkg": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
